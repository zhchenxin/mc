<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhchenxin.mc.dao.TopicDao">

    <insert id="create" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="top.zhchenxin.mc.entity.Topic">
        INSERT INTO topics SET
        name=#{name},
        description=#{description},
        create_date=unix_timestamp(now())
    </insert>

    <select id="search" resultType="top.zhchenxin.mc.entity.Topic">
        SELECT * FROM topics WHERE 1=1
        <if test="name != null and name != ''">AND name = #{name}</if>
        <if test="topicId != null and topicId != 0">AND id = #{topicId}</if>
        LIMIT #{offset},#{limit}
    </select>
    <select id="searchCount" resultType="java.lang.Long">
        SELECT count(*) FROM topics WHERE 1=1
        <if test="name != null and name != ''">AND name = #{name}</if>
        <if test="topicId != null and topicId != 0">AND id = #{topicId}</if>
    </select>

    <select id="getByIds" resultType="top.zhchenxin.mc.entity.Topic">
        SELECT * FROM topics WHERE id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>