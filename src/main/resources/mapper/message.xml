<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhchenxin.mc.mapper.MessageMapper">

    <select id="search" resultType="top.zhchenxin.mc.entity.Message">
        SELECT * FROM messages WHERE 1=1
        <if test="topicId != null and topicId != 0">AND topic_id = #{topicId}</if>
        <if test="customerId != null and customerId != 0">AND customer_id = #{customerId}</if>
        <if test="status != null and status != 0">AND status = #{status}</if>
        order by id desc
        LIMIT #{offset},#{limit}
    </select>
    <select id="searchCount" resultType="java.lang.Long">
        SELECT count(*) FROM messages WHERE 1=1
        <if test="topicId != null and topicId != 0">AND topic_id = #{topicId}</if>
        <if test="customerId != null and customerId != 0">AND customer_id = #{customerId}</if>
        <if test="status != null and status != 0">AND status = #{status}</if>
    </select>
</mapper>