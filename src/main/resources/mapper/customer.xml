<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhchenxin.mc.mapper.CustomerMapper">

    <select id="search" resultType="top.zhchenxin.mc.entity.Customer">
        SELECT * FROM customers WHERE 1=1
        <if test="topicId != null and topicId != 0">AND topic_id = #{topicId}</if>
        LIMIT #{offset},#{limit}
    </select>
    <select id="searchCount" resultType="java.lang.Long">
        SELECT count(*) FROM customers WHERE 1=1
        <if test="topicId != null and topicId != 0">AND topic_id = #{topicId}</if>
    </select>

    <select id="getByIds" resultType="top.zhchenxin.mc.entity.Customer">
        SELECT * FROM customers WHERE id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>