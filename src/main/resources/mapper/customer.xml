<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.chenxin.mc.mapper.CustomerMapper">

    <insert id="create">
        <selectKey keyProperty="userId" order="AFTER" resultType="java.lang.Long">
            select LAST_INSERT_ID()
        </selectKey>

        INSERT INTO customer SET create_date=unix_timestamp(now()),
            topic_id=#{topicId},
            name=#{name},
            api=#{api},
            timeout=#{timeout},
            attempts=#{attempts}
    </insert>

    <select id="search" resultType="top.chenxin.mc.entity.Customer">
        SELECT * FROM customer WHERE 1=1
        <if test="topicId != null and topicId != 0">AND topic_id = #{topicId}</if>
        order by id desc
        LIMIT #{offset},#{limit}
    </select>

    <select id="searchCount" resultType="java.lang.Long">
        SELECT count(*) FROM customer WHERE 1=1
        <if test="topicId != null and topicId != 0">AND topic_id = #{topicId}</if>
    </select>

    <select id="getByIds" resultType="top.chenxin.mc.entity.Customer">
        SELECT * FROM customer WHERE id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="getByTopicId" resultType="top.chenxin.mc.entity.Customer">
        select * from customer where topic_id = #{topicId}
    </select>

    <select id="getById" resultType="top.chenxin.mc.entity.Customer">
        select * from customer where id = #{id}
    </select>

</mapper>