<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.chenxin.mc.dao.MessageLogDao">

    <insert id="insert">

        <selectKey order="AFTER" resultType="java.lang.Long">
            select LAST_INSERT_ID()
        </selectKey>

        INSERT INTO message_log SET
            message_id=#{messageId},
            topic_id=#{topicId},
            customer_id=#{customerId},
            time=#{time},
            response=#{response},
            error=#{error},
            create_date=unix_timestamp(now())
    </insert>

    <select id="getByMessageId" resultType="top.chenxin.mc.entity.MessageLog">
        select * from message_log where message_id = #{messageId}
    </select>

</mapper>